<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="/searchStyles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto mb-4">
                <div class="section-title text-center ">
                    <h3 class="top-c-sep mt-4">Student Management Application</h3>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="career-search mb-60">

                    <form action="/student/search" class="career-form mb-60" method="post">
                        <div class="row">
                            <div class="col-9 my-3">
                                <div class="input-group position-relative">
                                    <input type="text" class="form-control" placeholder="Enter Your Keywords"
                                        name="studentName">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 my-3">
                                <button type="submit" class="btn btn-lg btn-block btn-light btn-custom" value="submit">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="filter-result">
                        <div class="mt-4 students-details-row d-flex align-items-center col-11"
                            style="font-weight: bold;padding: 10px 35px;">
                            <span>Name</span>
                            <span>Addmission Number</span>
                            <span>Class</span>
                            <a href="/student/add" class="btn  btn-primary m-0 col-2">ADD</a>
                        </div>
                        <% for (let index=0; index < students.length; index++) { %>
                            <div class="mt-4 row align-items-center" style="position: relative; left: 23.3px;">
                                <div class="students-details-row row col-8 job-box py-2" style="font-weight: bold;">
                                    <span class="col-2">
                                        <%= students[index].studentName %>
                                    </span>
                                    <span class="col-2">
                                        <%= students[index].studentAdNo %>
                                    </span>
                                    <span class="col-2">
                                        <%= students[index].studentClass %>
                                    </span>
                                </div>
                                <div class="job-right my-1 flex-shrink-0 col-1 mx-1 p-0"
                                    style="position: relative;left: 20px;">
                                    <a href="student/update/<%= students[index].studentAdNo %> "
                                        class="btn d-inline w-100 d-sm-inline-block btn-primary m-0">edit</a>
                                </div>
                                <div class="job-right my-1 flex-shrink-0 col-1 mx-0 p-0"
                                    style="position: relative;left: 30px;">
                                    <a href="student/delete/<%= students[index].studentAdNo %> "
                                        class="btn d-inline w-100 d-sm-inline-block btn-primary m-0">delete</a>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

        </div>
</body>

</html>