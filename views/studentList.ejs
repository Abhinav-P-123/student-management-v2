<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="/searchStyles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto mb-4">
                <div class="section-title text-center ">
                    <h3 class="top-c-sep mt-4">Student Management Application</h3>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="career-search mb-60">

                    <form action="/student/search" class="career-form mb-60" method="post">
                        <div class="row">
                            <div class="col-9 my-3">
                                <div class="input-group position-relative">
                                    <input type="text" class="form-control" placeholder="Enter Your Keywords"
                                        name="studentName" value="<%= searchString %>">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3 my-3">
                                <button type="submit" class="btn btn-lg btn-block btn-light btn-custom" value="submit">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="filter-result">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col" style="font-weight: bold;">Name</th>
                                    <th scope="col" style="font-weight: bold;">Addmission Number</th>
                                    <th scope="col" style="font-weight: bold;">Class</th>
                                    <th>
                                        <a href="/student/add" class="btn  btn-primary m-0 w-50"><i
                                                class="fa-solid fa-plus" style="color: #ffffff;"></i></a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let index=0; index < students.length; index++) { %>
                                    <tr>
                                        <td style="padding: 1rem 0.4rem">
                                            <%= students[index].studentName %>
                                        </td>
                                        <td style="padding: 1rem 0.4rem">
                                            <%= students[index].studentAdNo %>
                                        </td>
                                        <td style="padding: 1rem 0.4rem">
                                            <%= students[index].studentClass %>
                                        </td>
                                        <td class="d-flex gap-1" style="padding: 10px">
                                            <a href="/student/update/<%= students[index].studentAdNo %> "
                                                class="btn d-inline w-25 d-sm-inline-block btn-primary m-0"><i
                                                    class="fa-solid fa-pen" style="color: #ffffff;"></i></a>
                                            <a href="/student/delete/<%= students[index].studentAdNo %> "
                                                class="btn d-inline w-25 d-sm-inline-block btn-primary m-0">
                                                <i class="fa-solid fa-trash" style="color: #ffffff;"></i></a>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
</body>

</html>